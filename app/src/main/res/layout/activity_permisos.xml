<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Permisos">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio: "
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/permisoFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Seleccione la fecha"
            android:focusable="false"
            android:inputType="none"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fecha Fin: "
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/permisoFechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Seleccione la fecha"
            android:focusable="false"
            android:inputType="none"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/razonTxt"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="122dp"
            android:hint="Ingrese su razon"
            android:inputType="text|textMultiLine"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnEnviarSolicitud"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Enviar"
            android:onClick="enviarBtn"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fecha Inicio"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fecha Fin"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Estado"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_permisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>